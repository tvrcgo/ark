{
  "name": "ark-web-boilerplate",
  "version": "0.0.1",
  "description": "ark web boilerplate.",
  "scripts": {
    "dev": "npm run dev:client & npm run dev:server",
    "dev:client": "ark build --env=dev",
    "dev:server": "egg-bin dev --baseDir=server",
    "test": "npm run test:client && npm run test:server",
    "test:client": "ark test client/test/**/*.test.js",
    "test:server": "egg-bin test server/test",
    "lint": "ark lint client",
    "cov": "ark cov client/test/**/*.test.js server/test/**/*.test.js",
    "deploy": "ark build --env=prod"
  },
  "devDependencies": {
    "ark-cli": "^1",
    "egg-bin": "^4.3.7"
  },
  "author": "tvrcgo",
  "license": "MIT"
}
